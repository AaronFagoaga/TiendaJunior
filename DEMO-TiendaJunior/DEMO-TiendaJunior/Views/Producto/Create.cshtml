@model DEMO_TiendaJunior.Models.ProductoModel

@{
    ViewData["Title"] = "Agregar Producto";
}

<h1>Agregar Producto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre_Producto" class="control-label">Nombre: </label>
                <input asp-for="Nombre_Producto" class="form-control" />
                <span asp-validation-for="Nombre_Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Presentacion" class="control-label">Presentación: </label>
                <input asp-for="Presentacion" class="form-control" />
                <span asp-validation-for="Presentacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label">Stock: </label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdCategoria" class="control-label">Categoria: </label>
                <select 
                      asp-for="IdCategoria"
                        asp-items="@ViewBag.Categories"
                        class="form-select">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="IdCategoria" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Aceptar</button>
            <a href="@Url.Action("Index", "Producto")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
