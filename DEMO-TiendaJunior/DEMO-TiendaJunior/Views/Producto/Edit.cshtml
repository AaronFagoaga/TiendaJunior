@model DEMO_TiendaJunior.Models.ProductoModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar información del producto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id_Producto" />

            <div class="form-group">
                <label asp-for="Nombre_Producto" class="control-label"></label>
                <input asp-for="Nombre_Producto" class="form-control" />
                <span asp-validation-for="Nombre_Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Presentacion" class="control-label"></label>
                <input asp-for="Presentacion" class="form-control" />
                <span asp-validation-for="Presentacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCategoria" class="control-label"></label>
                <select asp-for="IdCategoria" asp-items="@ViewBag.Categories" class="form-select">
                    <option>Seleccione</option>
                </select>
                <span asp-validation-for="IdCategoria" class="text-danger"></span>
            </div>
            <hr />
            <div class="mb-3">
                <div class="d-inline-block">
                    <button type="submit" class="btn btn-success"><i class="fa-solid fa-pencil"></i> Editar</button>
                </div>
                <div class="d-inline-block">
                    <a class="btn btn-info" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
