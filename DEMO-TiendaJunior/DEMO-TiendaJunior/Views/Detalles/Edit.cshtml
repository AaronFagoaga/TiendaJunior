@model DEMO_TiendaJunior.Models.DetalleModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar detalle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="mb-3">
                <input asp-for="Id_Detalle" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                    <label asp-for="Id_Producto" class="form-label">Producto</label>
                    <select asp-for="Id_Producto"
                            asp-items="@ViewBag.Products"
                            class="form-select">
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="Id_Producto" class="text-danger"></span>
            </div>
            <hr />
            <div class="mb-3">
                <div class="d-inline-block">
                    <button type="submit" class="btn btn-success"><i class="fa-solid fa-pencil"></i> Editar</button>
                </div>
                <div class="d-inline-block">
                    <a class="btn btn-info" asp-controller="Ventas" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
