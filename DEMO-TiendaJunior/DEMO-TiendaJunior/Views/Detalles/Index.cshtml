@model IEnumerable<DEMO_TiendaJunior.Models.DetalleModel>

@{
    ViewData["Title"] = "Detalles de venta";
}

<h1>Detalles de venta</h1>

<p>
    <a asp-action="Create">Añadir detalle</a>
</p>
<table class="table table-bordered table-striped table-responsive" id="detailsTable"> <!--Copiar este formato para la etiqueta table-->
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Sub Total</th>
            <th>ACCIONES</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Producto?.Nombre_Producto </td>
            <td>@Html.DisplayFor(modelItem => item.Cantidad) </td>
            <td>$ @Html.DisplayFor(modelItem => item.SubTotal) </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Detalle">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Detalle">Eliminar</a>
            </td>
        </tr> }
    </tbody>
</table>
@section Scripts { <!--Copiar toda esta sección-->
	<script>
		$(document).ready(function () {
			$("#detailsTable").DataTable({ //Darle el mismo nombre definido en la etiqueta table
				dom: 'Bfrtip',
				buttons: [
					{
						extend: 'csv',
						exportOptions: {
							columns: ':not(:last-child)'
						}
					},
					{
						extend: 'pdf',
						exportOptions: {
							columns: ':not(:last-child)'
						}
					},
					{
						extend: 'excel',
						exportOptions: {
							columns: ':not(:last-child)'
						}
					}
				],
				columnDefs: [
					{
						targets: 3, //Definir cuantas columnas tendrá la tabla, en en este caso son 3, la columna de acciones no debe ser contada.
						orderable: false,
						searchable: false
					}
				],
				language: {
					url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
				}
			});
		});
	</script>
}