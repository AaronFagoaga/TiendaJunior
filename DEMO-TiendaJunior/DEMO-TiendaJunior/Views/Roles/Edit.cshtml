@model DEMO_TiendaJunior.Models.RolesModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar rol</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="Id_Roles" type="hidden" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre: </label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción: </label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NivelPrivilegios" class="control-label">Nivel de privilegios: </label>
                <input asp-for="NivelPrivilegios" class="form-control" />
                <span asp-validation-for="NivelPrivilegios" class="text-danger"></span>
            </div>

            <hr />
            <div class="mb-3">
                <div class="d-inline-block">
                    <button type="submit" class="btn btn-success"><i class="fa-solid fa-pencil"></i> Editar</button>
                </div>
                <div class="d-inline-block">
                    <a class="btn btn-info" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
