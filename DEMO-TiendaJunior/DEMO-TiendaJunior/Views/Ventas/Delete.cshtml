@model DEMO_TiendaJunior.Models.VentasModel

@{
    ViewData["Title"] = "Delete";
}

<h3>¿Deseas borrar esta venta?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Fecha de realización: </dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.dFecha)</dd>
        <dt class = "col-sm-2">Cliente: </dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Cliente)</dd>
        <dt class = "col-sm-2">Encargado: </dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Encargado)</dd>
        <dt class = "col-sm-2">Total vendido: </dt>
        <dd class = "col-sm-10">$ @Html.DisplayFor(model => model.Total_Venta)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input asp-for="Id_Venta" type="hidden" class="form-control" />
        <!--Copiar desde acá-->
        <div class="col-4 offset-2 row">
            <div class="col">
                <button type="submit" class="btn btn-danger w-100"><i class="fa-solid fa-trash"></i> Borrar</button>
            </div>
            <div class="col">
                <a class="btn btn-info w-100" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Volver</a>
            </div>
        </div>
        <!--Hasta acá, que quedé igual a este-->
    </form>
</div>
