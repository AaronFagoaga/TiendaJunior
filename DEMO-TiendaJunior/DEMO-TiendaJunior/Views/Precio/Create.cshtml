@model DEMO_TiendaJunior.Models.PrecioModel

@{
    ViewData["Title"] = "Create";
}

<h1>Establecer precio</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Id_Producto" class="form-label">Producto</label>
                <select asp-for="Id_Producto" asp-items="@ViewBag.Productos" class="form-select">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="Id_Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioUnidad" class="control-label"></label>
                <input asp-for="PrecioUnidad" class="form-control" />
                <span asp-validation-for="PrecioUnidad" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Aceptar</button>
            <a href="@Url.Action("Index", "Precio")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
