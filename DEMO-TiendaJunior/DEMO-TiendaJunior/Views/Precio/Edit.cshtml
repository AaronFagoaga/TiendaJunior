@model DEMO_TiendaJunior.Models.PrecioModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edición de precio</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id_Precio" type ="hidden" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="IdProducto" class="form-label">Producto: </label>
                <select asp-for="IdProducto"
                        asp-items="@ViewBag.Productos"
                        class="form-select">s
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="IdProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioUnidad" class="control-label">Precio unitario: </label>
                <input asp-for="PrecioUnidad" class="form-control" />
                <span asp-validation-for="PrecioUnidad" class="text-danger"></span>
            </div>
            <hr />
            <div class="mb-3">
                <div class="d-inline-block">
                    <button type="submit" class="btn btn-success"><i class="fa-solid fa-pencil"></i> Editar</button>
                </div>
                <div class="d-inline-block">
                    <a class="btn btn-info" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
