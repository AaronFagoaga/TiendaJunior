@model DEMO_TiendaJunior.Models.PrecioModel

@{
    ViewData["Title"] = "Delete";
}

<h1>¿Desea eliminar este registro?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Precio del producto
        </dt>
        <dd class = "col-sm-10">
            $ @Html.DisplayFor(model => model.PrecioUnidad)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input asp-for="Id_Precio" , type="hidden" class="form-control" />
        <div class="col-4 offset-2 row">
            <div class="col">
                <button type="submit" class="btn btn-danger w-100"><i class="fa-solid fa-trash"></i> Borrar</button>
            </div>
            <div class="col">
                <a class="btn btn-info w-100" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Volver</a>
            </div>
        </div>
    </form>
</div>
